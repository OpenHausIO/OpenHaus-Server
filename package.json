{
  "name": "OpenHaus-Server",
  "version": "1.0.0",
  "description": "SmartHome/IoT Server",
  "main": "index.js",
  "respository": "https://github.com/OpenHausIO/OpenHaus-Server.git",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf ./dist/**",
    "build": "tsc",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon ./dist/index.js --watch ./dist",
    "start": "npm-run-all clean build --parallel watch:build watch:server --print-label",
    "db:import": "mongorestore --host localhost:27017 --gzip --archive=./docs/assets/database.gz --db OpenHaus",
    "db:export": "mongodump --host localhost:27017 --archive=./docs/assets/database.gz --gzip --db OpenHaus",
    "docker:build": "docker build -t open-haus .",
    "docker:run": "docker run open-haus"
  },
  "author": "Marc Stirner <marc.stirner@open-haus.io>",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chalk": "^2.2.0",
    "@types/dateformat": "^3.0.1",
    "@types/express": "^4.17.0",
    "@types/joi": "^14.3.3",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mongoose": "^5.5.12",
    "@types/node": "^12.7.1",
    "@types/uuid": "^3.4.5",
    "@types/ws": "^6.0.2",
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "dotenv": "^8.1.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.7.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "dateformat": "^3.0.3",
    "express": "^4.17.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "tslib": "^1.10.0",
    "mongoose": ">=5.7.5",
    "uuid": "^3.3.3",
    "winston": "^3.2.1",
    "ws": "^7.1.2"
  }
}