{
    "name": "OpenHaus-Server",
    "version": "0.0.0",
    "description": "SmartHome/IoT Server",
    "main": "index.js",
    "respository": "https://github.com/OpenHausIO/OpenHaus-Server.git",
    "scripts": {
        "test": "mocha -r ts-node/register test/test.ts",
        "clean": "rimraf ./dist/**",
        "build": "tsc --declaration",
        "watch:build": "tsc --watch",
        "watch:server": "nodemon ./dist/index.js --watch ./dist",
        "start": "npm-run-all clean build copy-files --parallel watch:build watch:server --print-label",
        "copy-files": "cp ./package.json ./dist/package.json",
        "db:import": "mongorestore --host localhost:27017 --gzip --archive=./docs/assets/database.gz --db OpenHaus",
        "db:export": "mongodump --host localhost:27017 --archive=./docs/assets/database.gz --gzip --db OpenHaus",
        "docker:build": "docker build -t open-haus .",
        "docker:run": "docker run open-haus",
        "docs": "jsdoc -d=out dist/components/devices/index.js"
    },
    "author": "Marc Stirner <marc.stirner@open-haus.io>",
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/chalk": "^2.2.0",
        "@types/dateformat": "^3.0.1",
        "@types/express": "^4.17.7",
        "@types/joi": "^14.3.4",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mocha": "^7.0.2",
        "@types/mongoose": "^5.7.32",
        "@types/node": "^12.12.51",
        "@types/nodemailer": "^6.4.0",
        "@types/uuid": "^3.4.8",
        "@types/ws": "^6.0.4",
        "chalk": "^2.4.2",
        "clear": "^0.1.0",
        "mocha": "^7.2.0",
        "nodemon": "^1.19.4",
        "npm-run-all": "^4.1.5",
        "rimraf": "^2.7.1",
        "sinon": "^9.0.2",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7"
    },
    "dependencies": {
        "bcrypt": "^3.0.8",
        "body-parser": "^1.19.0",
        "dateformat": "^3.0.3",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "interface-stream": "git+https://github.com/OpenHausIO/interface-stream.git",
        "joi": "^14.3.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.9.25",
        "nodemailer": "^6.4.10",
        "tar": "^6.0.1",
        "tslib": "^1.13.0",
        "uuid": "^3.4.0",
        "winston": "^3.3.3",
        "ws": "^7.3.1"
    }
}
